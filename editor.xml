<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="13" />
    <option name="FONT_FAMILY" value="Fira Code" />
    <option name="LINE_SPACING" value="1.5" />
    <option name="USE_LIGATURES" value="true" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="MAIN_EDITOR" />
    <option name="SOFT_WRAP_FILE_MASKS" value="*" />
  </component>
  <component name="PhpCodeFoldingSettings">
    <option name="COLLAPSE_PHP_TAGS" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern icon="question" pattern="\btodo\b.*" />
    <pattern icon="important" pattern="\bfixme\b.*" />
  </component>
</application>